<!DOCTYPE html>
<html lang="fr">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0, user-scalable=no"/>
    <title>Facture {{ payment.id }}</title>

    <link rel="icon" href="{{ asset('favicon.ico') }}" />

    <!-- Core Css Stylesheets -->
    <link href="{{ asset('main.css', true) }}" rel="stylesheet">
    <link href="{{ asset('front/bootstrap.min.css', true) }}" rel="stylesheet">


    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>

<body>
<div class="container">
    <header class="row mt20">
        <div class="col-xs-5">
            <img src="{{ asset('img/Logo-webzy.png', true) }}" style="width: 200px;" class="logo">
            <address>
                <strong>{{ setting.name }}</strong><br/>
                {{ setting.params.address.road }}<br/>
                {{ setting.params.address.postal_code }} {{ setting.params.address.city }}<br/>
                {{ setting.params.address.country }}<br/>
                Tél: {{ setting.params.phone }}<br/>
            </address>
        </div>
        <div class="col-xs-5 col-xs-offset-2 mt40">
            <table class="table table-bordered">
                <tbody>
                <tr>
                    <td><strong>FACTURE N°{{ payment.id }}</strong></td>
                </tr>
                </tbody>
            </table>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>DATE</th>
                        <th>SOCIÉTÉ</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>{{ payment.created_at | date ('d/m/Y') }}</td>
                        <td>{{ society.name }}</td>
                    </tr>
                </tbody>
            </table>
            <address>
                <strong>{{ society.name }}</strong><br/>
                {{ society.address.address }}<br/>
                {{ society.address.postal_code }} {{ society.address.city }}<br/>
                {{ society.address.country }}<br/>
            </address>
        </div>
    </header>
    <div class="row mt40">
        <div class="col-xs-6">
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th>MODE DE RÉGLEMENT</th>
                    <th>DEVICE</th>
                    <th>DATE D'ÉCHÉANCE</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td>{{ charge.source.brand }}</td>
                    <td class="text-uppercase">{{ charge.currency }}</td>
                    <td>{{ charge.created | date ('d/m/Y') }}</td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Description</th>
                        <th>Date</th>
                        <th>Montant HT</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <strong>{{ payment.title }}</strong><br/>
                            Référence : {{ payment.reference }}<br>
                            Nouvelle date d'expiration du site : {{ society.website.expiration_date | date ('d/m/Y') }}
                        </td>
                        <td>{{ payment.created_at | date ('d/m/Y') }}</td>
                        <td>{{ payment.amount | number_format(2, '.', ',') }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-4 col-xs-offset-8">
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th>Total HT</th>
                    <th>Total TVA</th>
                    <th>Net à payer</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td>{{ payment.amount | number_format(2, '.', ',') }}</td>
                    <td>0.00</td>
                    <td>{{ payment.amount | number_format(2, '.', ',') }} €</td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
    <hr />
    <footer class="row mt40">
        <div class="col-xs-4 center-align">
            <strong>Tél : </strong>{{ setting.params.phone }}
        </div>
        <div class="col-xs-4 center-align">
            <strong>E-mail : </strong>{{ setting.params.email }}
        </div>
        <div class="col-xs-4 center-align">
            <strong>Site web : </strong>{{ setting.domain }}
        </div>
    </footer>
</div>
</body>
</html>